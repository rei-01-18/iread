<div class="contents row">
  <div class="more">
    <ul class="more_list">
      <li>
        <%= link_to '削除', book_path(@book.id), method: :delete %>
      </li>
    </ul>
    <p><%= @book.review %></p>
    <span class="name"><%= @book.title %>
    <%= render "layouts/radio"%>
  </div>
  <div class="container">
    <%= form_with(model:[@book, @comment], method: :post) do |f| %>
      <%= f.text_area :text, placeholder: "コメントする" %>
      <%= f.submit "SEND" %>
    <% end %>
  </div>
  <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p><%= comment.text %></p>
        <%= link_to '削除', book_comment_path(@book, comment), method: :delete %>
      <% end %>
    </div>
</div>