<h2>カテゴリー <%= @category.name %></h2>
  <ul>
    <% @categorys.each do |book| %>
      <li>
        <div class="content_post">
          <p><%= book.title %></p>
          <p><%= book.date %></p>
          <p><%= book.next %></p>
          <p><%= book.category.name %></p>
        </div>
        <div class='edit'>
        <li><%= link_to '詳細', book_path(book.id), method: :get %></li>
        </div>
      </li>
    <% end %>
  </ul>
</div>